<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="1dp">

        <Button
            android:id="@+id/blockCreationSameButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="non-ipv8: unencrypted unsigned block creation with the same content and addresses (no storage)" />

        <Button
            android:id="@+id/blockCreationRandomButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="non-ipv8: unencrypted unsigned block creation with random content and random addresses (no storage)" />

        <Button
            android:id="@+id/blockCreationSignedRandomButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="non-ipv8: unencrypted signed block creation with random content and addresses (no storage)" />

        <Button
            android:id="@+id/blockCreationSignedRandomInMemoryButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="non-ipv8: unencrypted signed block creation with random content and addresses on in-memory storage" />

        <Button
            android:id="@+id/blockCreationSignedRandomPermanentButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="non-ipv8: unencrypted signed block creation with random content and addresses on permanent storage" />

        <Button
            android:id="@+id/comparisonButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Compare non-ipv8" />

        <Button
            android:id="@+id/unencryptedRandomSignedSendIPv8Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ipv8: unencrypted signed block sending with random content and addresses" />

        <Button
            android:id="@+id/encryptedRandomSignedSendIPv8Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ipv8: encrypted signed block sending (IPv8) with random content and addresses" />

        <Button
            android:id="@+id/trustchainBenchmarkButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TrustChain" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
